{
    "manifest_version": 3,
    "name": "ChessBot",
    "description": "Real-time stockfish chess analyzer.",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": [
        "https://*.chess.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [{
        "resources": ["engine.js"],
        "matches": ["https://*.chess.com/*"]
    }]
}
